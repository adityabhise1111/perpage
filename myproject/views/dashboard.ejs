<!DOCTYPE html>
<html>
<head>
  <title>Deals Dashboard - PerPage</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #2d2d2d 100%);
      color: white;
      min-height: 100vh;
    }

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 40px;
      background: #0a0a0a;
      border-bottom: 1px solid rgba(40, 40, 40, 0.3);
    }

    nav a {
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      font-size: 16px;
      margin-left: 30px;
    }

    nav a:hover {
      color: #4ade80;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 40px;
      color: white;
    }

    th, td {
      padding: 12px 16px;
      border-bottom: 1px solid #444;
      text-align: left;
    }

    th {
      background-color: #111;
    }

    tr:hover {
      background-color: #1f1f1f;
    }

    button {
      padding: 6px 12px;
      background-color: #3b82f6;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 600;
    }

    button:hover {
      background-color: #2563eb;
    }

    .file-link {
      margin-bottom: 6px;
    }

    .container {
      padding: 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      font-size: 36px;
      margin-bottom: 20px;
      font-weight: 700;
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav>
    <div style="display: flex; align-items: center; gap: 12px;">
      <div style="width: 40px; height: 40px; background: white; border-radius: 6px; display: flex; align-items: center; justify-content: center;">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" style="color: #0a0a0a;">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
          <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></polyline>
        </svg>
      </div>
      <span style="font-size: 26px; font-weight: 700; color: white;">PerPage</span>
    </div>

    <div>
      <a href="/">Home</a>
      <a href="/writers">Writers</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/dashboard">Dashboard</a>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <h1>Deals Dashboard</h1>

    <table>
      <thead>
        <tr>
          <th>Writer Profile</th>
          <th></th>
          <th>Pages</th>
          <th>Total Price</th>
          <th>Status</th>
          <th>File(s)</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% deals.forEach(deal => { %>
          <tr>
            <td><img src="<%= deal.writerId?.profilePic || 'N/A' %>" alt="<%= deal.writerId?.name || 'N/A' %>" style="width: 50px; height: 50px; border-radius: 50%;"></td>
            <td><%= deal.writerId?.name || 'N/A' %></td>
            <td><%= deal.pages %></td>
            <td>â‚¹<%= deal.totalPrice %></td>
            <td><%= deal.status %></td>

            <td>
              <% if (deal.signedLinks && deal.signedLinks.length > 0) { %>
                <% deal.signedLinks.forEach((link, idx) => { %>
                  <div class="file-link">File <%= idx + 1 %></div>
                <% }) %>
              <% } else { %>
                No files
              <% } %>
            </td>

            <td>
              <% if (deal.signedLinks && deal.signedLinks.length > 0) { %>
                <% deal.signedLinks.forEach((link, idx) => { %>
                  <div class="file-link">
                    <a href="<%= link %>" target="_blank" download>
                      <button>Download <%= idx + 1 %></button>
                    </a>
                  </div>
                <% }) %>
              <% } else { %>
                -
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
