    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Advanced Animations */
        .fade-in {
            opacity: 0;
            animation: fadeIn 1.2s ease-out forwards;
        }
        .slide-up {
            opacity: 0;
            transform: translateY(30px);
            animation: slideUp 1s ease-out forwards;
        }
        .slide-left {
            opacity: 0;
            transform: translateX(-30px);
            animation: slideLeft 1s ease-out forwards;
        }
        .slide-right {
            opacity: 0;
            transform: translateX(30px);
            animation: slideRight 1s ease-out forwards;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes slideLeft {
            from { opacity: 0; transform: translateX(-30px); }
            to { opacity: 1; transform: translateX(0); }
        }
        @keyframes slideRight {
            from { opacity: 0; transform: translateX(30px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .fade-in:nth-child(1) { animation-delay: 0.1s; }
        .fade-in:nth-child(2) { animation-delay: 0.3s; }
        .fade-in:nth-child(3) { animation-delay: 0.5s; }
        .slide-up:nth-child(1) { animation-delay: 0.2s; }
        .slide-up:nth-child(2) { animation-delay: 0.4s; }
        .slide-up:nth-child(3) { animation-delay: 0.6s; }
        .gradient-text {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #06b6d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            background-size: 200% 200%;
            animation: gradientShift 3s ease-in-out infinite;
        }
        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        .bg-gradient-animated {
            background: #fff !important;
            background-size: 400% 400%;
        }
        /* All backgrounds to white */
        body, .bg-gradient-animated, .bg-gray-800, .bg-gray-900, .bg-black, .bg-gray-700, .bg-gray-900, .bg-gray-800, .bg-gray-900, .bg-gray-700 {
            background: #fff !important;
            background-color: #fff !important;
        }
        /* Text color to dark */
        body, .text-white, .text-gray-300, .text-gray-400, .text-gray-500, .text-gray-800, .text-gray-900, .text-blue-100, .text-blue-400, .text-blue-600, .text-purple-400, .text-purple-600, .text-cyan-400, .text-green-400, .text-green-600, .text-yellow-400 {
            color: #222 !important;
        }
        /* Card backgrounds */
        .bg-gray-800, .bg-gray-900, .bg-black {
            background: #fff !important;
            background-color: #fff !important;
        }
        /* Borders */
        .border-gray-700, .border-gray-800 {
            border-color: #e5e7eb !important;
        }
        /* Nav background */
        nav {
            background: #fff !important;
            border-bottom: 1px solid #e5e7eb !important;
        }
        /* Footer background */
        footer {
            background: #f9fafb !important;
        }
        /* Button colors */
        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            color: #fff !important;
        }
        .btn-secondary {
            border: 2px solid #3b82f6;
            color: #3b82f6 !important;
            background: #fff !important;
        }
        .btn-secondary:hover {
            background: #f0f7ff !important;
            color: #1e40af !important;
        }
        /* Nav links */
        .nav-link {
            color: #222 !important;
        }
        .nav-link:hover {
            color: #3b82f6 !important;
        }
        /* Logo */
        .logo-container span, .logo-container svg {
            color: #222 !important;
        }
        /* Particle background hidden for white bg */
        .particles {
            display: none !important;
        }
        /* Section backgrounds */
        section, .py-24, .py-20, .py-16 {
            background: #fff !important;
        }
        /* Remove text shadows */
        h1, h2, h3, h4, h5, h6, p, span, div {
            text-shadow: none !important;
        }
        /* Review cards */
        .rounded-xl, .rounded-2xl, .rounded-3xl {
            background: #fff !important;
        }
        /* Remove dark overlays */
        .bg-opacity-60, .bg-opacity-50 {
            background: #fff !important;
        }
        /* Remove backdrop blur */
        .backdrop-filter, .backdrop-blur-lg {
            backdrop-filter: none !important;
        }
        /* Remove box shadows for lighter look */
        .shadow-2xl, .shadow-xl, .shadow-lg {
            box-shadow: 0 2px 8px rgba(0,0,0,0.04) !important;
        }
        /* Hero image border */
        .hero-image img {
            border-radius: 8px !important;
        }
        /* Footer text */
        footer .text-white, footer .text-gray-400, footer .text-gray-500 {
            color: #222 !important;
        }
        /* Remove background gradients in sections */
        .bg-gradient-to-br, .bg-gradient-to-r, .bg-gradient-to-b, .bg-gradient-to-l {
            background: #fff !important;
        }
    </style>
</head>
